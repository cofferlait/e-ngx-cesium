{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noEmitHelpers": false,
		"noImplicitAny": false,
		"sourceMap": false,
		"declaration": true,
		"rootDir": "aot",
		"outDir": "dist",
		"lib": [
			"es6",
			"dom"
		]
	},
	"files": [
		"./aot/index.ts"
	],
	"exclude": [
		"node_modules",
		"src",
		"example"
	],
	"angularCompilerOptions": {
		"genDir": "./aot/factories"
	}
}
